@model SecureQuestionBankV0._1._3.Models.UploadQuestion

@{
    /**/

    ViewBag.Title = "qsnView";
    Layout = "~/Views/Shared/SubAdminLayout.cshtml";
}

<h4 class="h-position">Upload Question List</h4>
<hr class="hr-design">

<p>
    <button class="btn btn-info" onclick="location.href='@Url.Action("Upload", "SubAdminTraffic")'"><span class="fa fa-telegram admin-action-icon"></span>Publish</button>
</p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 30%">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th style="width: 30%">
                @Html.DisplayNameFor(model => model.FileName)
            </th>
            <th style="width: 20%">
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model.Data)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FileName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <p class="btn btn-primary btn-sm admin-action-btn"><span class="fa fa-download admin-action-icon"></span>@Html.ActionLink("Download", "DownloadFile", new { id = item.Id }, new { @class = "Afjal-view" })</p>
                    <p class="btn btn-danger btn-sm admin-action-btn"><span class="fa fa-trash admin-action-icon"></span>@Html.ActionLink("Delete", "DeleteFile", new { id = item.Id }, new { @class = "Afjal-view", onclick = "return confirm('Are sure wants to delete?');" })</p>
                </td>
            </tr>
        </tbody>
    }
</table>